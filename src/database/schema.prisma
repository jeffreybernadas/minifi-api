generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  schema       = "minifi"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum LinkStatus {
  ACTIVE
  SCHEDULED
  DISABLED
  ARCHIVED
  BLOCKED
}

enum ScanStatus {
  PENDING
  SAFE
  SUSPICIOUS
  MALICIOUS
  ADULT_CONTENT
}

enum UserType {
  GUEST
  FREE
  PRO
}

enum SubscriptionTier {
  FREE
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  INCOMPLETE
  TRIALING
}

model User {
  id String @id // Keycloak sub (UUID) - NOT auto-generated

  // From keycloak
  email                     String  @unique
  username                  String? // preferred_username from Keycloak
  firstName                 String? // given_name from Keycloak
  lastName                  String? // family_name from Keycloak
  emailVerified             Boolean @default(false)
  emailNotificationsEnabled Boolean @default(true)

  // Additional profile fields (managed by application)
  phoneNumber String?
  avatarUrl   String?
  address     String?

  // URL shortener
  userType     UserType      @default(FREE)
  links        Link[]
  tags         Tag[]
  subscription Subscription?

  // Chat relations
  chatMemberships ChatMember[]
  messages        Message[]

  // Admin moderation
  isBlocked     Boolean   @default(false)
  blockedAt     DateTime?
  blockedReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([username])
  @@index([userType])
  @@index([isBlocked])
}

enum ChatType {
  DIRECT
  GROUP
}

model Chat {
  id        String   @id @default(uuid())
  name      String? // Optional for direct chats, required for group chats
  type      ChatType @default(GROUP)
  creatorId String // Keycloak user ID

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members  ChatMember[]
  messages Message[]

  @@index([type])
  @@index([createdAt])
  @@index([creatorId])
}

model ChatMember {
  id     String @id @default(uuid())
  chatId String
  userId String // Keycloak user ID

  joinedAt DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([chatId, userId])
  @@index([userId])
  @@index([chatId])
}

model Message {
  id        String  @id @default(uuid())
  chatId    String
  senderId  String // Keycloak user ID
  content   String  @db.Text
  isEdited  Boolean @default(false)
  isDeleted Boolean @default(false)
  replyToId String? // ID of the message being replied to

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  chat   Chat          @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender User          @relation(fields: [senderId], references: [id], onDelete: Cascade)
  readBy MessageRead[]

  // Reply-to self-relation
  replyTo Message?  @relation("MessageReplies", fields: [replyToId], references: [id], onDelete: SetNull)
  replies Message[] @relation("MessageReplies")

  @@index([chatId, createdAt])
  @@index([senderId])
  @@index([replyToId])
}

model MessageRead {
  id        String   @id @default(uuid())
  messageId String
  userId    String // Keycloak user ID
  readAt    DateTime @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@index([userId])
  @@index([messageId])
  @@index([readAt])
}

model Link {
  id          String     @id @default(uuid())
  userId      String? // NULLABLE for guest users
  originalUrl String     @db.Text
  shortCode   String?    @unique // NULLABLE when customAlias is used
  customAlias String?    @unique
  title       String?    @db.VarChar(200)
  description String?    @db.Text
  status      LinkStatus @default(ACTIVE)

  // Guest user tracking
  isGuest        Boolean @default(false)
  guestIpAddress String? @db.VarChar(45) // For rate limiting
  guestUserAgent String? @db.Text // For analytics

  // Scan metadata (URL safety)
  scanStatus      ScanStatus @default(PENDING)
  scanScore       Float?
  scannedAt       DateTime?
  scanDetails     Json?
  lastScanVersion String?    @db.VarChar(50)

  // Advanced features
  password    String?
  scheduledAt DateTime?
  expiresAt   DateTime?
  clickLimit  Int?
  isOneTime   Boolean   @default(false)
  isArchived  Boolean   @default(false)
  notes       String?   @db.Text

  // Analytics counters
  clickCount       Int       @default(0)
  uniqueClickCount Int       @default(0)
  lastClickedAt    DateTime?

  // QR code
  qrCodeUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
  analytics LinkAnalytics[]
  tags      LinkTag[]

  @@index([userId])
  @@index([shortCode])
  @@index([customAlias])
  @@index([status])
  @@index([isArchived])
  @@index([scheduledAt])
  @@index([expiresAt])
  @@index([isGuest])
  @@index([guestIpAddress])
  @@index([createdAt])
}

model LinkAnalytics {
  id        String   @id @default(uuid())
  linkId    String
  clickedAt DateTime @default(now())

  // Visitor tracking (privacy-preserving)
  visitorId String  @db.VarChar(64) // SHA-256 hash of IP + UA
  isUnique  Boolean @default(false) // True for first visit from this visitor
  ipAddress String? @db.VarChar(45)
  userAgent String? @db.Text

  // Parsed data
  browser        String?
  browserVersion String?
  os             String?
  osVersion      String?
  device         String?

  // Geolocation
  country     String?
  countryCode String? @db.VarChar(2)
  city        String?
  region      String?
  latitude    Float?
  longitude   Float?

  // Referrer & UTM
  referrer       String? @db.Text
  referrerDomain String? // Extracted domain from referrer URL
  utmSource      String?
  utmMedium      String?
  utmCampaign    String?
  utmTerm        String?
  utmContent     String?

  link Link @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@index([linkId])
  @@index([visitorId])
  @@index([isUnique])
  @@index([clickedAt])
  @@index([country])
  @@index([device])
  @@index([referrerDomain])
}

model Tag {
  id     String @id @default(uuid())
  userId String
  name   String @db.VarChar(50)

  // UI Colors - separate background and text for better contrast
  backgroundColor String @default("#3B82F6") @db.VarChar(7)
  textColor       String @default("#FFFFFF") @db.VarChar(7)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  links LinkTag[]

  @@unique([userId, name])
  @@index([userId])
}

model LinkTag {
  id     String @id @default(uuid())
  linkId String
  tagId  String

  link Link @relation(fields: [linkId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([linkId, tagId])
  @@index([linkId])
  @@index([tagId])
}

model Subscription {
  id     String             @id @default(uuid())
  userId String             @unique
  tier   SubscriptionTier   @default(FREE)
  status SubscriptionStatus @default(ACTIVE)

  stripeCustomerId       String?   @unique
  stripeSubscriptionId   String?   @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  cancelAtPeriodEnd      Boolean   @default(false) // True if user cancelled but period hasn't ended
  stripeCancelAt         DateTime? // When the subscription will actually end (if cancelled)

  emailNotifications  Boolean @default(true)
  securityAlertEmails Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tier, status])
  @@index([stripeCustomerId])
}
